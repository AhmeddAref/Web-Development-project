<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/Css/category.css">
    
<script>
function myFunction() {
    document.getElementById("myDropdown").classList.toggle("show");
}
</script>

</head>

<body>

    <%- include("./partials/nav.ejs") %>
      <div class="dropdown">
        <button onclick="myFunction()" class="dropbtn">PRODUCTS</button>
        <div id="myDropdown" class="dropdown-content">
        <% categories.forEach(cat=> { %>
          <a href=""><%= cat.name %></a>
        <% }) %>
        </div>
      </div>

      <hr>

      <div class="products">
      <% if (beds.length> 0) { %>
      <% beds.forEach(bed=> { %>
    <div class="product" role="button" onclick="location.href='Product-page.ejs'">
        <img src="<%= bed.imageUrl %>" alt="">
        <h3 class="pname"><%= bed.name %></h3>
        <P class="price">EGP <%= bed.price %></P>
        <hr>
        <button class="addtocart" type="button" name="addtocaart" onclick="">Add to cart</button>
    </div>
    <% }) %>
    <% } else { %>
      <p>There are no beds to display...</p>
      <% } %>
    </div> 
      
</body>
</html>
