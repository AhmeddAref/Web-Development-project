<!DOCTYPE html>
<html lang="en">  
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="Stylesheet" href="/Css/form.css">
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
  />
    
   
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

  <script src="/js/ajax.js"></script>

<script>   function validate() {
  if (document.getElementById('result').innerHTML.includes('taken'))
      return false;
  else
      return true;
}
</script>


    <title>Sign Up</title>
</head>
<body>
    <%- include("./partials/nav.ejs") %>
 
<div class="form-container">
  <div class="frame">
    <div class="form-nav">
      <ul class="links">
        <li class="signin-active"><a class="btn">Sign in</a></li>
        <li class="signup-inactive"><a class="btn">Sign up </a></li>
      </ul>
    </div>
    <p id="mode"><%=mode %></p>


    <div ng-app ng-init="checked = false">
    

      <form class="form-signin" action="/form/signin" method="post" name="form">
        <label for="email1">Email</label>
        <input class="form-styling" type="email" name="Email" placeholder=""/>
        <label for="password">Password</label>
        <input class="form-styling" type="password" name="password" placeholder=""/>
        <input type="checkbox" id="checkbox"/>
        <label for="checkbox" ><span class="ui"></span>Keep me signed in</label>
        <div class="btn-animate">
          <button class="btn_signin" type="submit" >Sign in</button>
        </div>
      </form>
      <div class="error-notice">
        <% if (errorMessage) { %>
          <div class="oaerror danger">
            <strong>Error</strong> - <%= errorMessage %>
          </div>
        <% } %>
      </div>
  


      
        
      <% let errorMsgs = []; %>

      <% if (errors && errors.length > 0) { %>
        <div class="alert alert-danger">
          <% for (let i = 0; i < errors.length; i++) { %>
            <% errorMsgs.push(errors[i].msg); %>
          <% } %>
        </div>
      <% } %>
      
                   <form class="form-signup"  method="post" onsubmit="return validate()" action="/form/signup" name="form">
                          <label for="fullname">Full name</label>
                          <input class="form-styling" type="text" name="fullname" placeholder="Full name" id="username"/>
                          <small id="alert1"> <%= errorMsgs[0] %></small>
                          <label for="email">Email</label>
                          <input class="form-styling" type="email" name="email" placeholder="Email" id="email"/>
                          <small id="alert1"> <%= errorMsgs[1] %></small>
                          <small id="result"></small>
                          <label for="phone">Phone number</label>
                          <input class="form-styling" type="text" name="phone" placeholder="Phone number" id="phone"/>
                          <small id="alert1"> <%= errorMsgs[2] %></small>
                          <label for="password">Password</label>
                          <input class="form-styling" type="password" name="password" placeholder="Password" id="password"/>
                          <small id="alert1"> <%= errorMsgs[3] %></small>
                          <label for="confirmpassword">Confirm password</label>
                          <input class="form-styling" type="password" name="confirmpassword" placeholder="Confirm password" id="cpassword"/>
                          <small id="alert1"> <%= errorMsgs[4] %></small>
                          <input type="hidden" name="type" value="client">
                          
                          <button class="btn-signup">sign up</button>
                                </form>
                  
                             
                  
                         
             
  
      
     
      
      
      
